
public class TestaCondicional {

	public static void main(String[] args) {
		int idade = 16;
		int idadeMinimaPermitida = 18;
		int quantidadeAcompanhantes = 0;

		if (idade >= idadeMinimaPermitida) {
			System.out.println("Você pode entrar, tem 18 anos ou mais");
		} else {
			if (quantidadeAcompanhantes >= 1) {
				System.out.println("Você não tem 18 anos, mas pode entrar acompanhado");
			} else {
				System.out.println("Infelizmente você não pode entrar por ser menor de idade");
			}

		}
	}

}
